}

.menu-nologin-left-image {
  width: 80rpx;
  height: 80rpx;
}

.menu-nologin-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 80rpx;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
}

.menu-nologin-center-text {
  font-size: 10px;
}

.menu-nologin-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 80rpx;
  top: 20rpx;
  width: 160rpx;
}

.menu-nologin-right-nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.menu-nologin-right-text {
  font-size: 15px;
}






.menu-nav {
    width: 20%;
    height:100%; 
    text-align: center;
    align-items: center;
}

.menu-nav-item {
    display: flex;
