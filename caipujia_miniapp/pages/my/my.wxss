
.container {
  display: absolute;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #F2f2f2;
}

.userinfo {
  display: flex;
  flex-direction: row;    
  justify-content: space-between;
  align-items: center;
  padding-left: 12rpx ;
  padding-right: 12rpx;
  width: 100%;
  height: 200rpx;
  background: #5BD213;
}

.userinfo-left {
  display: flex;
  flex-direction: row;

  justify-content: flex-start;    
  align-items: center;
  flex-wrap: nowrap;
  height: 100%;
  width: 70%;
}
 .avatar {
    display: inline-block;
    width: 120rpx;
    height: 120rpx;
     border-radius: 50%;
     border:1px solid white;
     background-color: rgba(255, 255, 255,.5);
     overflow: hidden;
  }
.userinfo-left-left {
  height:50%;
  width: 250rpx; 
  text-align: center;
}
.userinfo-left-right {
  flex-direction: column;    
  justify-content: center;
  height: 30%;
  width: 100%;
  text-align: center;
}

.userinfo-left-righ-viewnick {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  top: 10rpx;
  height: 50%;
  width: 90%;
  text-align: center;
}
.userinfo-left-righ-viewnick-nickname {
  font-size: 34rpx;
  color: white;
}

.userinfo-left-right-viewplate {
  display: flex;
  flex-direction: row;    
  justify-content: flex-start;
  height: 100%;
  width: 50%;  
}

.userinfo-left-right-viewplate-imagestart {
  width: 10rpx;
  height: 10rpx;
}

.userinfo-left-right-viewplate-view {
  left: 10rpx;
  width: 100rpx;
  height: 10rpx;
}

.userinfo-left-righ-viewplate-view-text {
  font-size: 20rpx;
  color: white;
}


.userinfo-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  width: 30%;
  background-color:#5BD213;
}

.userinfo-right-addr {
  justify-content: space-around;
}

.userinfo-right-addr-text {
  font-size: 15px;
  color: white;
}


.sum {
  display: flex;
  flex-direction: row;    
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap; 
  width: 100%;
  height: 100rpx;
  margin-top: 1rpx;
  background-color: #5BD213; 
  position: relative; 
}

.sum-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3333%;
  height: 100%;
  text-align: center;
}

.sum-view-nav {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.sum-view-title {
  width: 100%;
  height: 50%;
  color: white;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.sum-view-value {
  width: 100%;
  height: 50%;
  color: white;
  font-size:30rpx;
  font-weight: 600;
}


.sum-line {
  width:1px;
  height: 80rpx;
  top: 10rpx;
  background-color: white;
  opacity: .6;
  position: absolute;
  z-index: 1;
  left:0;
}
.sl3-1{
  left:33.3333%;
}
.sl3-2{
  left:66.666666%;
}




.menu {
  display: flex;
  flex-direction: row;    
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  width: 100%;
  height: 140rpx;
  margin-top: 30rpx;
  background-color: white;
}

.menu-nologin-left {
