  .yuebox{
    font-size: 24rpx;
    
    font-weight: 600;
    margin: 20rpx;
    
    
  }
  .yuebox-item{
     line-height: 60rpx;
       background-color: white;
  }
  .yuebox.active .yuebox-item{
    background-color: yellow;
  }
  .yuebox-price{
    border-radius: 10rpx 10rpx 0 0;
    margin-bottom: 1px;
    position: relative;
  }
   .yuebox-price::after{
     contain: "";
     position: absolute;
     bottom: -1px;
     left:0;
     width:100%;
     height: 1px;


      background-image: -webkit-gradient(linear, 0 100%, 100% 0, color-stop(0.25, rgba(255, 208,46,1)), color-stop(0.25, transparent), color-stop(0.5, transparent), color-stop(0.5, rgba(255, 208,46, 1)), color-stop(0.75, rgba(255, 208,46,1)), color-stop(0.75, transparent), to(transparent));
     background-image: -webkit-linear-gradient(-45deg, rgba(255, 208,46,1) 25%, transparent 25%, transparent 50%, rgba(255, 208,46,1) 50%, rgba(255, 208,46,1) 75%, transparent 75%, transparent);
     background-image: linear-gradient(-45deg, rgba(255, 208,46,1) 25%, transparent 25%, transparent 50%, rgba(255, 208,46, 1) 50%, rgba(255, 208,46, 1) 75%, transparent 75%, transparent);
     -webkit-background-size:10px 10px;
     background-size:1px 1px;
      
   }
  .yuebox-text{
     border-radius: 0 0 10rpx 10rpx ;
