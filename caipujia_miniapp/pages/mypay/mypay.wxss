
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #eee;
}

.type {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.type-box{
  width:20%;
  box-sizing: contenta-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
  color: #999;
}
.type-item-on{
  border-bottom: 4rpx solid #5BD213;
  font-weight: 600;
  color: #333;
}




.orderlist{
