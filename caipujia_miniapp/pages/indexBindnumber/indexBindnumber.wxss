/* pages/index-bindnumber/index-bindnumber.wxss */
.container {
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
  padding-bottom: 0rpx;
}

.tip {
  width: 100%;
  height: 150rpx;
  background-color: lightgrey;
  padding: 20rpx;
}

.tip-text {
  background-color: lightgrey;
  font-size: 10px;
}

.phone {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 120rpx;
  background-color: white;
}

.phone-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 99rpx;
}

.phone-view-left {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 65%;
  height: 100%;
}

.phone-view-left-input {
  width: 100%;
  height: 90%;
  bottom: 0;
  font-size: 10pt;
  color: #888888;
}

.phone-view-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 25%;
  height: 100%;
}



.phone-view-right-button {
  width: 100%;
  height: 50%;
  border-radius:30rpx;
  font-size:9px;
  background-color: white;
}

.phone-line {
  width: 100%;
  height: 1rpx;
  background-color: black;
}

.buttonbind {
  height: 80rpx;
  width: 70%;
  top: 300rpx;
  border-radius:40rpx;
  background-color: #5BD213;
  color: white;
  font-size: 10pt;
  
}