/* pages/homeMarket/homeMarket.wxss */
.container {
  background-color: lightgray;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
}

/* 轮播图 */

.swiper {
    height: 400rpx;
    width: 100%;
}

.swiper-box {
    overflow-x: hidden;
}

.banner-item {
    height: 100%;
    width: 100%;
}

.banner-item image {
    height: 100%;
    width: 100%;
}

/* type */
.type-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 10rpx;
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.type-box{
  width:33.3%;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #5BD213;
}


/* goods */
.goods-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-first;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  background-color:white;
  margin-top: 10rpx;
}

/* nav_left */
.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}

.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  /* border-bottom: 1px solid #dedede; */
  font-size: 14px;
}
.nav_left .nav_left_items.active{
  background: #fff;
}

/* nav_right */
.nav_right {
  width: 75%;
  height: 100%;
  background-color: lightgray;
}


.nav_right-box {
  width: 100%;
  height: 80px;
  background-color: white;
  margin-bottom: 2rpx;
}

.nav_right-nav {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}

.nav_right-box-img {
  width: 80px;
  height: 60px;
  padding-top: 10px;
  padding-left: 10px;
}

.nav_right-box-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.nav_right-box-detail-name-text{
  font-size: 25rpx;
  color: #000000;
}

.nav_right-box-detail-tip{
  
}
.nav_right-box-detail-tip-text{
  font-size: 25rpx;
  color: #FFFFFF;
  background-color: #F57746;
}

.nav_right-box-detail-star {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.nav_right-box-detail-star-container{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.nav_right-box-detail-star-container-image {
  position: absolute;
  top: 50rpx;
  width: 150rpx;
  height: 150rpx;
  src: "../../images/normal.png";
}
 
.nav_right-box-detail-star-container-item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}


.nav_right-box-detail-star-text{
  font-size: 25rpx;
  color: #000000;
}

.nav_right-box-detail-total-text{
  font-size: 25rpx;
  color: #000000;
}


