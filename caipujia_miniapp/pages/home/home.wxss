/* 天天特惠 */

.onsale {
  width: 100%;
  position: relative;
  font-size: 13pt;
  /* padding: 10rpx; */
}

.onsale-title {
  width: 70%;
  min-height: 60rpx;
  text-align: center;
  margin: 40rpx auto 50rpx;
  color: red;
  position: relative;
  opacity: 0.7;
}

.onsale-title.onsale-title-gray {
  color: #636363;
}

.onsale-title text {
  display: inline-block;
}

.onsale-title .ltitle {
  line-height: 60rpx;
  padding: 0 20rpx;
  background: #f8f8f8;
  z-index: 1;
  position: relative;
  font-size: 36rpx;
  font-weight: 600;
}

.onsale-title .ttext {
  position: absolute;
  bottom: -26rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
}

.onsale-title:after {
  content: "";
  display: block;
  width: 100%;
  height: 4rpx;
  border-radius: 1rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 50%;
}

.onsale-title.onsale-title-gray:after {
  background-color: #636363;
}

/* 至鲜时刻，倒计时 */

.onsale-view {
  /* height: 300rpx; */
  position: relative;
  padding-top: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.onsale-view-top {
  height: 100rpx;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}


.onsale-view-title{
  padding-left: 10rpx;
  line-height: 80rpx;
}
.onsale-view-top-cn {
  color: #fe5858;
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  padding-left: 20rpx;
}
.onsale-view-top-cn::after{
  content: "";
  position: absolute;
  left:10rpx;
  top:50%;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color:#fe5858; 
}
.onsale-view-top-en {
  color: lightgray;
  font-size:24rpx;
  margin-left:10rpx;
}

/* 倒计时 */

.count-conutdown-box {
  position: absolute;
  right:10rpx;
  top:10rpx;
   
  font-size:30rpx;
  font-weight: 600;
  color: #fe5858;
}
.count-conutdown-box text{
  background-color: #fe5858;
  color: white;
  display: inline-block;
  padding: 0 10rpx;
  margin: 0 5rpx;
  line-height:60rpx;
  border-radius: 10rpx;
}

.count-countdown-bg {
  background-color: #fb4c44;
}

.count-space {
  color: #fb4c44;
}

.onsale-view-image {
  
  width: 100%;
}
.onsale-view-image .imgitem{
  height: 292rpx;
}
