.todayList:after {
  content: "";
  display: block;
  clear: both;
}

.todayItem:after {
  content: "";
  display: block;
  clear: both;
}

.todayItem {
  width: 50%;
  height: auto;
  text-align: center;
  display: inline-block;
  /* box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.12), 0 0 8px 0 rgba(0, 0, 0, 0.04); */
  position: relative;
}

.todayItem .naviitem {
  border-radius: 20rpx;
  overflow: hidden;
}
.todayItem .title1{
  font-size: 30rpx;
}
.todayItem .title2{
  font-size: 24rpx;
}

.todayItem:first-child .naviitem {
  margin-right: 10rpx;
}

.todayItem:last-child .naviitem {
  margin-left: 10rpx;
}

.todayItem  .imgitem {
  height: 292rpx;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
}

.todayItem text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 11pt;
}

