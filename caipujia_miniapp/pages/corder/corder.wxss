/* 购物车 */

/* bottom-box */
.bottom-box{
    position: fixed;
    width: 100%;
    bottom: 0;
    font-size:28rpx;
    color:#000000;
    border-top: 1rpx solid #eee;
    height:100rpx;
    line-height: 100rpx;
    background-color: white;
    background-size: 15rpx auto;
    
}

.bottom-box-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
}

.cart {
  width: 70%;
  height: 100%;
  background-color:white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.cart-img {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.cart-img-image {
  width: 25px;
  height: 25px;
  margin-top: 15rpx;
  margin-left: 30rpx;
}


.cart-img-text{
  color: #FE5858;
  font-size: 5;
  margin-top: -20rpx;
  margin-left: 0rpx;
}
.cart-total {
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  width: 70%;
  height: 100%;
  background-color:white;
}

.cart-total-sum {
  height: 30%;
  width: 100%;
  color: #EF5151;
  font-size: 30rpx;
}

.cart-total-tip {
  width: 100%;
  height: 70%;
  color: lightgray;
  font-size: 15rpx;
} 

.account {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #5BD213;
}

.account-container{
  align-items: center;
}

.account-container-text {
  color: white;
}



