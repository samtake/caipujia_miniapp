/* pages/mycommit/mycommit.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #f8f8f8;
}

.type {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.type-box{
  width:50%;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
/* .type-item-on{
  border-bottom: 4rpx solid #e64340;
} */
.type-box text{
  display: inline-block;

}
.type-item-on  text{
  border-bottom: 4rpx solid #3bce19;
  font-weight: 600;
}

 .wrap {
    display: block;
    
  }
  .item {
    font-size: 20rpx;
    
  }
  .side {
    
    flex-grow: 0;
  }
  .main {
    
    flex-grow: 1;
     
  }
   





.commitlist{
  width: 100%;
}
.commit-item{
  padding: 20rpx 30rpx;
  background-color: white;
  margin-top: 20rpx;
}
.commit-shop{
  line-height: 80rpx;
}
.shopname{
  font-size: 32rpx;
}
.date{
  font-size: 26rpx;
}
.commit-rate{
  display: inline-block;
  
}
.commit-score{
   font-size: 26rpx;
  line-height:70rpx;
}
.commit-text,
.commit-order{
  font-size: 28rpx;
  line-height:50rpx;
}
.commit-text{
  margin-bottom: 20rpx;
}
.goodslist{
  padding: 0;
}
.goodslist .goodsbox{
  background-color: #f8f8f8;
  font-size:32rpx;
  padding: 20rpx;
  border-radius: 0;
}
.goodsbox .side{
  width: 150rpx;
}
.goodsbox .item{
  font-size: 28rpx;
}
.goods-price{
 margin-top: 50rpx;
}